@model MVCapplication.Models.UserloginClass
@{
    ViewBag.Title = "Login_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Login</h2>
<div>
    @using (Html.BeginForm("Login_Click", "LoginDB", FormMethod.Post))
            {
                <div><label>Username:</label></div>
                <div>
                    @Html.TextBoxFor(m=>m.Uname)
                    @Html.ValidationMessageFor(m=>m.Uname)
                </div>

                <div><label>Password:</label></div>
                <div>
                    @Html.PasswordFor(m=>m.password)
                    @Html.ValidationMessageFor(m=>m.password)
                </div>

                <div>
                    <input type="submit" value="Login"/>
                    @Html.DisplayFor(m=>m.msg)
                </div>
            }
</div>

