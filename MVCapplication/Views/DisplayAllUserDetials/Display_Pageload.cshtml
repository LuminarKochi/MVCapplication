@model IEnumerable<MVCapplication.Models.SelectAllClass>
@{
    ViewBag.Title = "Display_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Display All User Details</h2>
<div>
    @using (Html.BeginForm("Display_Pageload","DisplayAllUserDetials",FormMethod.Get))
            {
                <table id="t01" class="table">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Photo</th>
                    </tr>
                    @foreach(var item in ViewBag.userdetails)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Address</td>
                        <td>@item.Email</td> @*table fields(spell same as table fields) names*@
                        <td>
                            <img src="@Url.Content(item.Photo)" alt="Image" height="150" width="150" />
                        </td>
                    </tr>
                }
                </table>
            }
</div>

